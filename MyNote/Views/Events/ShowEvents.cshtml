@model IEnumerable<MyNote.Models.ShowEventViewModel>

@{
    ViewBag.Title = "ShowEvents";
}
<div class="row">
    <p>
        @Html.ActionLink("Dodaj wspomnienie", "CreateEvent",null, new { @class = "btn btn-defaul" } )
    </p>
    <table class="table">
        <tr>
            <th>
                Tytuł
            </th>
            <th>
                Treść
            </th>
            <th>
                Data
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.ActionLink(" ", "Edit", new { id = item.Id }, new { @class = "glyphicon glyphicon-edit" }) |
                    @Html.ActionLink(" ", "Delete", new { id = item.Id }, new { @class = "glyphicon glyphicon-remove" })
                </td>
            </tr>
        }

    </table>
</div>
